<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/background</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/placeholder_foreground</item>
        <item name="colorSecondaryVariant">@color/ring</item>
        <item name="colorOnSecondary">@color/foreground</item>

        <!-- Ensure the window draws system bar backgrounds (status bar). -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- If you want white icons in the status bar, set this to false -->
        <item name="android:windowLightStatusBar">false</item>

        <!-- Set default font for the app -->
        <item name="android:fontFamily">@font/sf_pro_display_regular</item>
    </style>
</resources>
