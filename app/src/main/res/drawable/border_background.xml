<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Fill the background with white (or any color you want) -->
    <solid android:color="@color/card" />

    <!-- Add a gray stroke/border -->
    <stroke
        android:width="1dp"
        android:color="@color/border" /> <!-- #BEBEBE is a light gray, tweak as needed -->

    <!-- Slight corner rounding -->
    <corners android:radius="4dp" />

    <!-- Optional extra padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>